        "high = int(input(\"身高(cm):\"))\n",
        "high = high / 100\n",
        "BMI = weight/(high)**2\n",
        "print(\"BMI 計算結果為\"+ str(BMI))\n",
        "print(\"您的BMI數值為\", round(BMI,2))\n",
        "\n",
